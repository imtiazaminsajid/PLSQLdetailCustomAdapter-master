<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sayed.plsqldetailcustomadapter.MovieDetailsActivity">

    <ImageView
        android:id="@+id/movieDetailImgID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/movieNameDetailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Name"
        android:gravity="center"
        android:textSize="22sp"
        android:padding="5dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/movieYearDetailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Year"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="editMovie"
        android:text="Edit"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteMovie"
        android:text="Delete"/>
</LinearLayout>
